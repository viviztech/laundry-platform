# ==========================================
# LaundryConnect - Environment Configuration
# ==========================================
#
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
#
# Quick Setup:
#   1. cp .env.example .env
#   2. Edit .env with your values
#   3. Generate secret key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
#   4. Generate VAPID keys: python manage.py generate_vapid_keys
#

# ==========================================
# CORE DJANGO SETTINGS
# ==========================================

# REQUIRED: Secret key for cryptographic signing
# Generate: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# REQUIRED: Debug mode (True for development, False for production)
DEBUG=True

# REQUIRED: Allowed hosts (comma-separated for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# Django settings module
DJANGO_SETTINGS_MODULE=config.settings.development


# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# PostgreSQL database settings
DB_NAME=laundry_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432


# ==========================================
# EMAIL CONFIGURATION
# ==========================================

# Email backend
# Development: django.core.mail.backends.console.EmailBackend
# Production: django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP settings (for production)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@laundryconnect.com


# ==========================================
# SMS CONFIGURATION (TWILIO) - Optional
# ==========================================

# Leave empty to disable SMS notifications
# Get credentials from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Optional: Callback URL for SMS delivery status
TWILIO_STATUS_CALLBACK_URL=


# ==========================================
# PUSH NOTIFICATIONS (VAPID) - Optional
# ==========================================

# Generate with: python manage.py generate_vapid_keys
# Leave empty to disable push notifications

VAPID_PRIVATE_KEY=

VAPID_PUBLIC_KEY=

VAPID_ADMIN_EMAIL=mailto:admin@laundryconnect.com


# ==========================================
# PAYMENT GATEWAY (RAZORPAY)
# ==========================================

# Get from: https://dashboard.razorpay.com/app/keys

# Test credentials (for development)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Webhook secret (from Razorpay webhook settings)
RAZORPAY_WEBHOOK_SECRET=

# Payment settings
RAZORPAY_CURRENCY=INR
RAZORPAY_PAYMENT_CAPTURE=1


# ==========================================
# REDIS CONFIGURATION
# ==========================================

# Redis connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Redis URLs for different services
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CHANNEL_LAYERS_REDIS_URL=redis://localhost:6379/3


# ==========================================
# CELERY CONFIGURATION
# ==========================================

# Run tasks synchronously for testing (True) or async (False)
CELERY_TASK_ALWAYS_EAGER=False

# Propagate exceptions in eager mode
CELERY_TASK_EAGER_PROPAGATES=True


# ==========================================
# CORS SETTINGS
# ==========================================

# Allow all origins (development only)
CORS_ALLOW_ALL_ORIGINS=True

# Specific origins (production)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Allow credentials
CORS_ALLOW_CREDENTIALS=True


# ==========================================
# AWS/S3 CONFIGURATION - Optional
# ==========================================

# Enable S3 for media storage (False for local storage)
USE_S3=False

# AWS credentials (if USE_S3=True)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=laundryconnect-media
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=


# ==========================================
# SENTRY ERROR TRACKING - Optional
# ==========================================

# Get from: https://sentry.io
SENTRY_DSN=
SENTRY_ENVIRONMENT=development


# ==========================================
# THIRD-PARTY APIs - Optional
# ==========================================

# Google Maps API (for location features)
GOOGLE_MAPS_API_KEY=

# SendGrid API (alternative email provider)
SENDGRID_API_KEY=

# OpenAI API (if using AI features)
OPENAI_API_KEY=


# ==========================================
# FRONTEND URL
# ==========================================

# Frontend application URL (for email links)
FRONTEND_URL=http://localhost:3000


# ==========================================
# SECURITY SETTINGS (Production Only)
# ==========================================

# Enable these in production with HTTPS
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000


# ==========================================
# CUSTOM APPLICATION SETTINGS
# ==========================================

# Site settings
SITE_NAME=LaundryConnect
SITE_DOMAIN=localhost:8000

# Business settings
DEFAULT_CURRENCY=INR
DEFAULT_TIMEZONE=Asia/Kolkata

# File upload limits (bytes)
MAX_UPLOAD_SIZE=5242880

# Order settings
ORDER_CANCELLATION_WINDOW=30
AUTO_COMPLETE_ORDERS_AFTER_DAYS=7

# Notification toggles
SEND_EMAIL_NOTIFICATIONS=True
SEND_SMS_NOTIFICATIONS=False
SEND_PUSH_NOTIFICATIONS=False


# ==========================================
# DEVELOPMENT HELPERS
# ==========================================

# Show Django Debug Toolbar (development only)
SHOW_DEBUG_TOOLBAR=False

# SQL query logging (development only)
LOG_SQL_QUERIES=False
