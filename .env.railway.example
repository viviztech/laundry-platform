# Railway Environment Variables Template
# Copy these to Railway Dashboard â†’ Variables

# ===========================
# Django Core Settings
# ===========================
DJANGO_SETTINGS_MODULE=config.settings.production
SECRET_KEY=generate-a-super-secret-key-minimum-50-characters-change-this
DEBUG=False
ALLOWED_HOSTS=your-app.railway.app,*.railway.app

# ===========================
# Database (Auto-configured by Railway)
# ===========================
# DATABASE_URL=postgresql://...  # Set automatically when you add PostgreSQL

# ===========================
# Redis (Auto-configured by Railway)
# ===========================
# REDIS_URL=redis://...  # Set automatically when you add Redis

# ===========================
# CORS Settings
# ===========================
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-mobile-app.com

# ===========================
# Email Configuration (SendGrid)
# ===========================
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key-here
DEFAULT_FROM_EMAIL=noreply@laundryconnect.com

# ===========================
# SMS (Twilio)
# ===========================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_STATUS_CALLBACK_URL=https://your-app.railway.app/api/sms/callback/

# ===========================
# Push Notifications (VAPID)
# Generate with: python manage.py generate_vapid_keys
# ===========================
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_ADMIN_EMAIL=mailto:admin@laundryconnect.com

# ===========================
# Payment Gateways
# ===========================
# Razorpay
RAZORPAY_KEY_ID=rzp_live_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Stripe (if using)
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# PayU (if using)
PAYU_MERCHANT_KEY=your_payu_merchant_key
PAYU_MERCHANT_SALT=your_payu_merchant_salt

# ===========================
# Google Maps (for tracking)
# ===========================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ===========================
# Sentry (Error Tracking - Optional)
# ===========================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================
# Railway Specific
# ===========================
RAILWAY_ENVIRONMENT=production
# PORT=8000  # Set automatically by Railway

# ===========================
# Media Files (Optional - for Railway Volumes or S3)
# ===========================
# For S3:
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ===========================
# Additional Settings
# ===========================
# DJANGO_ENV=production
# TIME_ZONE=Asia/Kolkata
